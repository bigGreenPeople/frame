<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="user" extends="struts-default" namespace="/">
		<!-- 用户 -->
		<action name="user_*" class="userAction" method="{1}">
		<!-- 登入成功跳转 -->
			<result name="loginSuccess">
				/index.jsp
			</result>
			<!-- 登入错误跳转 -->
			<result name="loginErr">
				/login.jsp
			</result>
		</action>
		<!-- 客户 -->
		<action name="customer_*" class="customerAction" method="{1}">
			<!-- 跳转到添加页面 -->
			<result name="toAddPage">
				/jsp/customer/add.jsp
			</result>
			<!-- 添加成功跳转 -->
			<result name="addSuccess">
				/jsp/success.jsp
			</result>
			<!-- 显示用户列表跳转 -->
			<result name="list">
				/jsp/customer/list.jsp
			</result>
			<!-- 跳转到修改页面 -->
			<result name="toUpdate">
				/jsp/customer/edit.jsp
			</result>
			<!-- 修改成功跳转 -->
			<result name="update" type="redirectAction">
				customer_list
			</result>
			<!-- 删除成功跳转 -->
			<result name="delete" type="redirectAction">
				customer_list
			</result>
			<!-- 显示用户分页列表跳转 -->
			<result name="listPage">
				/jsp/customer/list2.jsp
			</result>
			<!-- 查询跳转 -->
			<result name="find">
				/jsp/customer/list.jsp
			</result>
		</action>
		<!-- 联系人 -->
		<action name="linkMan_*" class="linkManAction" method="{1}">
			<!-- 跳转到添加界面 -->
			<result name="toAddPage">
				/jsp/linkman/add.jsp
			</result>
			<!-- 添加成功跳转界面 -->
			<result name="add">
				/jsp/success.jsp
			</result>
			<!-- 显示所有联系人 -->
			<result name="list">
				/jsp/linkman/list.jsp
			</result>
		</action>
	</package>
</struts>
